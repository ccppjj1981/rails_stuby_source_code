  <% @cart.line_items.each do |line_item| %>
		<tr id = "cart_<%= line_item.id%>">
		    <% product = Product.find(line_item.product_id) %>
		    <td><%= check_box_tag "#{line_item.id}" %></td>
			<td><%= product.name %></td>
			<td><%= product.price %></td>
			<td><%= product.description %></td>
			<td><%= line_item.quantity  %></td>
			<td><%=link_to t('common.cart_delete'),api_line_item_path(line_item),method: :delete,remote: true,data: { confirm: 'Are you sure?' }%></td>
		</tr>
	<%end%>

